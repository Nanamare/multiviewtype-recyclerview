<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlackToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="titleTextAppearance">@style/BlackToolbarTextStyle</item>
        <item name="contentInsetStart">0dp</item>
        <item name="maxButtonHeight">48dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="BlackToolbarTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>